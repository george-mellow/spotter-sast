      "gdpr": ["Article 32"],
      "pci_dss": ["6.5.1"],
      "iso27001": ["A.14.2.1"],
      "sox": ["Section 404"],
      "nist_csf": ["PR.DS-1", "PR.DS-2"]
    },
    "xss": {
      "hipaa": ["164.312(a)(1)"],
      "gdpr": ["Article 32"],
      "pci_dss": ["6.5.7"],
      "iso27001": ["A.14.2.1"],
      "nist_csf": ["PR.DS-1"]
    },
    "hardcoded_secrets": {
      "hipaa": ["164.312(a)(2)(i)"],
      "gdpr": ["Article 32"],
      "pci_dss": ["3.4", "8.2.1"],
      "iso27001": ["A.10.1.1"],
      "sox": ["Section 404"],
      "nist_csf": ["PR.AC-1", "PR.DS-1"]
    },
    "weak_crypto": {
