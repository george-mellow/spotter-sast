    "report:read": "View reports",
    "report:generate": "Generate new reports",
    "vulnerability:read": "View vulnerability details",
    "vulnerability:triage": "Triage and manage vulnerabilities",
    "fix:suggest": "Generate fix suggestions",
    "fix:apply": "Apply automatic fixes", 
    "policy:read": "View security policies",
    "policy:manage": "Manage security policies",
    "audit:read": "View audit logs",
    "monitoring:read": "View monitoring status",
    "monitoring:manage": "Manage continuous monitoring",
    "dashboard:read": "View security dashboard",
    "compliance:read": "View compliance status"
  }
