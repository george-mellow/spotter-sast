{
  "roles": {
    "security-admin": {
      "description": "Full administrative access to all security functions",
      "permissions": ["*"],
      "level": 4
    },
    "security-analyst": {
      "description": "Security analysis and reporting capabilities", 
      "permissions": [
        "scan:read",
        "scan:execute", 
        "report:read",
        "report:generate",
        "vulnerability:read",
        "vulnerability:triage",
        "policy:read",
        "audit:read",
        "monitoring:read",
        "dashboard:read"
      ],
      "level": 3
    },
    "developer": {
      "description": "Standard developer access for security scanning",
      "permissions": [
        "scan:read",
        "scan:execute",
        "report:read", 
        "fix:suggest",
        "fix:apply",
        "vulnerability:read",
        "dashboard:read"
      ],
      "level": 2
    },
    "auditor": {
      "description": "Read-only access for compliance and auditing",
      "permissions": [
        "scan:read",
        "report:read",
        "vulnerability:read",
        "audit:read",
        "policy:read",
        "compliance:read",
        "dashboard:read"
      ],
      "level": 1
    },
    "viewer": {
      "description": "Basic read-only access",
